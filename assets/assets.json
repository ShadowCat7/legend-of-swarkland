{
  files: {
    "version": {
      path: "build/full_version.txt",
    },
  },
  globFiles: [
    {
      path: "assets/font/",
      glob: "*",
      prefix: "font/",
    },
  ],
  textures: {
    spritesheet: {
      allowRotate90: false, // SDL2 textures don't let you override the vertex array
      maxWidth: 512,
      maxHeight: 512,
      globImages: [
        { glob: "*.png", path: "assets/img/",
          anchor: "topleft", prefix:  "img/", },
        { glob: "*.png", path: "assets/img/individual/",
          anchor: "topleft", prefix:  "img/individual/", },
        { glob: "*.png", path: "assets/img/map/",
          anchor: "topleft", prefix:  "img/map/", },
        { glob: "*.png", path: "assets/img/potion/",
          anchor: "topleft", prefix:  "img/potion/", },
        { glob: "*.png", path: "assets/img/wand/",
          anchor: "topleft", prefix:  "img/wand/", },
      ],
    }
  }
}
